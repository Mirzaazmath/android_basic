<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select Items"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textColor="@color/red"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:id="@+id/cbA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select All"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <CheckBox
        android:id="@+id/cbB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Burger"

        app:layout_constraintTop_toBottomOf="@+id/cbA"
        app:layout_constraintRight_toRightOf="@+id/cbA"
        app:layout_constraintLeft_toLeftOf="@+id/cbA"
         />
    <CheckBox
        android:id="@+id/cbP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Pizza"
        app:layout_constraintTop_toBottomOf="@+id/cbB"
        app:layout_constraintRight_toRightOf="@+id/cbA"
        app:layout_constraintLeft_toLeftOf="@+id/cbA"
        />

    <CheckBox
        android:id="@+id/cbC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chips"
        app:layout_constraintTop_toBottomOf="@+id/cbP"
        app:layout_constraintRight_toRightOf="@+id/cbA"
        app:layout_constraintLeft_toLeftOf="@+id/cbA"
        />

    <CheckBox
        android:id="@+id/cbD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Drinks"
        app:layout_constraintTop_toBottomOf="@+id/cbC"
        app:layout_constraintRight_toRightOf="@+id/cbA"
        app:layout_constraintLeft_toLeftOf="@+id/cbA"
        />

    <Button
        android:id="@+id/btn1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Total"
        android:textSize="22sp"
        android:layout_marginTop="200dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbD"
       />







</androidx.constraintlayout.widget.ConstraintLayout>